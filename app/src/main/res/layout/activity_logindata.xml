<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/below_ur_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:background="#7F7F7F"
            android:padding="10dp"
            android:text="Below your data "
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#555c5b">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="16dp"
                    android:src="@drawable/layer2" />
            </FrameLayout>


            <TextView
                android:id="@+id/user_email_transfered"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#626562"
                android:inputType="text"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="#fff"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"

            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#555c5b">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:src="@drawable/layer4" />
            </FrameLayout>


            <TextView
                android:id="@+id/user_password_transfered"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#626562"
                android:inputType="text"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="#fff"
                android:textSize="14dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#555c5b">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="16dp"
                    android:src="@drawable/layer5" />
            </FrameLayout>


            <TextView
                android:id="@+id/user_mobile_transfered"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#626562"
                android:inputType="text"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="#fff"
                android:textSize="14dp" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>